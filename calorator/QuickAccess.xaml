                <Button Text="Sandwich" Grid.Row="23" Grid.Column="0" Clicked="Button_Clicked"></Button>
                <Button Text="Taco" Grid.Row="23" Grid.Column="1" Clicked="Button_Clicked"></Button>
                <Button x:Name="ToCalories" Text="Other Options" Clicked="ToCalories_Clicked" Grid.Row="24" Grid.ColumnSpan="2"></Button>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>