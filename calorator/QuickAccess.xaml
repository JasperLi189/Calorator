                <Image Source="Ramen.png" Grid.Row="10" Grid.Column="1"></Image>
                <Button Text="Pizza" Grid.Row="11" Grid.Column="0" Clicked="Button_Clicked"></Button>
                <Button Text="Ramen" Grid.Row="11" Grid.Column="1" Clicked="Button_Clicked"></Button>
