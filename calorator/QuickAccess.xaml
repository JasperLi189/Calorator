             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calorator.QuickAccess"
             Title="QuickAccess">
    <ContentPage.Content>
        <ScrollView>
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions >
                    <RowDefinition /> <!--0-->
                    <RowDefinition Height="40" /> <!--1-->
                    <RowDefinition /> <!--2-->
                    <RowDefinition Height="40"/> <!--3-->
                    <RowDefinition /> <!--4-->
                    <RowDefinition Height="40"/> <!--5-->
                    <RowDefinition /> <!--6-->
                    <RowDefinition Height="40"/> <!--7-->
                    <RowDefinition /> <!--8-->
                    <RowDefinition Height="40"/> <!--9-->
                    <RowDefinition /> <!--10-->
                    <RowDefinition Height="40"/> <!--11-->
                    <RowDefinition /> <!--12-->
                    <RowDefinition Height="40"/> <!--13-->
                    <RowDefinition /> <!--14-->
                    <RowDefinition Height="40"/> <!--15-->
                    <RowDefinition /> <!--16-->
                    <RowDefinition Height="40"/> <!--17-->
                    <RowDefinition /> <!--18-->
                    <RowDefinition Height="40"/> <!--19-->
                    <RowDefinition /> <!--20-->
                    <RowDefinition Height="40"/> <!--21--> 
                    <RowDefinition /> <!--22-->
                    <RowDefinition Height="40"/> <!--23-->
