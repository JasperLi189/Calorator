                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Source="bakkutteh.png" Grid.Row="0" Grid.Column="0"></Image>
                <Image Source="chips.PNG" Grid.Row="0" Grid.Column="1"></Image>
                <Button Text="Bak Kut Teh" Grid.Row="1" Grid.Column="0" Clicked="Button_Clicked"></Button>
                <Button Text="Chips" Grid.Row="1" Grid.Column="1" Clicked="Button_Clicked"></Button>
                <Image Source="Burger.png" Grid.Row="2" Grid.Column="0"></Image>
                <Image Source="chickenrice.png" Grid.Row="2" Grid.Column="1"></Image>
                <Button Text="Burger" Grid.Row="3" Grid.Column="0" Clicked="Button_Clicked"></Button>
                <Button Text="Chickenrice" Grid.Row="3" Grid.Column="1" Clicked="Button_Clicked"></Button>
                <Image Source="coffee.png" Grid.Row="4" Grid.Column="0"></Image>
                <Image Source="Friedrice.png" Grid.Row="4" Grid.Column="1"></Image>
                <Button Text="Coffee" Grid.Row="5" Grid.Column="0" Clicked="Button_Clicked"></Button>
                <Button Text="Friedrice" Grid.Row="5" Grid.Column="1" Clicked="Button_Clicked"></Button>
                <Image Source="Friedchicken.png" Grid.Row="6" Grid.Column="0"></Image>
                <Image Source="fries.png" Grid.Row="6" Grid.Column="1"></Image>
