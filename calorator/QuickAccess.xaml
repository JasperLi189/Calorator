                <Image Source="bubbletea.png" Grid.Row="16" Grid.Column="1"></Image>
                <Button Text="Beer" Grid.Row="17" Grid.Column="0" Clicked="Button_Clicked"></Button>
                <Button Text="Bubbletea" Grid.Row="17" Grid.Column="1" Clicked="Button_Clicked"></Button>
